{{> header}}
<div class="container">
    <h1>Movie title: {{movie.title}}</h1>
    <div class="row bg-light text-dark">

        <div class="col-md-8">
            <img class="img-thumbnail" src="{{movie.imageUrl}}" alt="{{movie.title}}">
        </div>
        <div class="col-md-4 text-center">
            <h3 class="my-3 ">Movie Description</h3>
            <p>{{movie.description}}</p>
            {{#if creator}}
            <a class="btn btn-danger" href="#/delete/{{id}}">Delete</a>
            <a class="btn btn-warning" href="#/editMovie/{{id}}">Edit</a>
            {{else}}
            {{#if notLiked}}
            <a class="btn btn-primary" href="#/like/{{id}}">Like</a>
            {{/if}}
            <span class="enrolled-span">Likes {{likes}}</span>
            {{/if}}
        </div>
    </div>
</div>
{{> footer}}