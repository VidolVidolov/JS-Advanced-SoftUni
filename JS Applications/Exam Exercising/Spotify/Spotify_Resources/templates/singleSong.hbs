<div class="song">
    <h5>Title: {{title}}</h5>
    <h5>Artist: {{artist}}</h5>
    <img class="cover" src="{{imageUrl}}" />
    {{#if creator}}
    <p>Likes: {{likes}}; Listened {{listened}} times</p>
    <a href="/delete/{{id}}"><button type="button" class="btn btn-danger mt-4">Remove</button></a>
    <a href="/listen/{{id}}"><button type="button" class="btn btn-success mt-4">Listen</button></a>
    {{else}}
    <p>Likes: {{likes}}</p>
    <a href="/like/{{id}}"><button type="button" class="btn btn-primary mt-4">Like</button></a>
    {{/if}}
</div>