{{>header}}

<div class="container">
            <div class="row bg-light text-dark">
            <h1>Movie title: {{data.title}}</h1>
                
                <div class="col-md-8">
                    <img class="img-thumbnail" src="{{data.imageUrl}}" alt="Movie">
                </div>
                <div class="col-md-4 text-center">
                    <h3 class="my-3 ">Movie Description</h3>
                    <p>{{data.description}}</p>
                    {{#if creator}}
                    <a class="btn btn-danger" href="#/delete/{{id}}">Delete</a>
                    <a class="btn btn-warning" href="#/edit/{{id}}">Edit</a>
                    {{else}}
                    {{#if likedNot}}
                    <a class="btn btn-primary" href="#/like/{{id}}">Like</a>
                    {{/if}}
                    <span class="enrolled-span">Likes: {{likes}}</span>
                    {{/if}}
                </div>
            </div>
        </div>